<% provide(:title, 'Add new Hotel') %>
<div class="container">
  <h1>Add new Hotel</h1>

  <div class='row'>
    <div class="col-md-7">
      <%= form_for(@hotel, :html => { :class => 'form-horizontal' }) do |f| %>
	    <%= render 'shared/error_messages', object: f.object %>

        <div class='form-group'>
	      <%= f.label :title, class: 'control-label col-md-3' %>
          <div class="col-md-7">
	        <%= f.text_field :title, {class: 'form-control', placeholder: 'Title'} %>
          </div>
        </div>

        <div class='form-group'>
	      <%= f.label :stars, class: 'control-label col-md-3' %>
          <div class="col-md-7">
	        <%= f.select :stars, 0..7, {}, {class: 'form-control'} %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :breakfast, class: 'control-label col-md-3' %>
          <div class="col-md-7">
            <div class="checkbox">
              <%= f.check_box :breakfast, {class: 'form-control'} %>
            </div>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :description, class: 'control-label col-md-3' %>
          <div class="col-md-7">
            <%= f.text_area :description, {class: 'form-control', placeholder: 'Description'} %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :photo, class: 'control-label col-md-3' %>
          <div class="col-md-7">
              <%= f.file_field :photo, accept: 'image/png,image/gif,image/jpeg' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :price, class: 'control-label col-md-3' %>
          <div class="col-md-7">
	        <%= f.text_field :price, {class: 'form-control', placeholder: 'Price'} %>
          </div>
        </div>

        <%= fields_for @address do |fa| %>
            <div class='form-group'>
              <%=fa.label :country, class: 'control-label col-md-3' %>
              <div class="col-md-7">
                  <%=fa.country_select :country, nil, {}, {class: 'form-control'} %>
              </div>
            </div>

            <div class='form-group'>
              <%=fa.label :state, class: 'control-label col-md-3' %>
              <div class="col-md-7">
                <%=fa.text_field :state, {class: 'form-control', placeholder: 'State'} %>
              </div>
            </div>

            <div class='form-group'>
              <%=fa.label :city, class: 'control-label col-md-3' %>
              <div class="col-md-7">
                <%=fa.text_field :city, {class: 'form-control', placeholder: 'City'} %>
              </div>
            </div>

            <div class='form-group'>
              <%=fa.label :street, class: 'control-label col-md-3' %>
              <div class="col-md-7">
                <%=fa.text_field :street, {class: 'form-control', placeholder: 'Street'} %>
              </div>
            </div>
        <% end %>

        <div class='form-group'>
          <div class="col-md-offset-3 col-md-7">
            <%= f.submit 'Save', class: 'btn btn-primary' %>
          </div>
        </div>

	<% end %>
    </div>
  </div>
</div>